@Service
public class PedidoCommandService {

    private final CommandGateway gateway;

    public PedidoCommandService(CommandGateway gateway) {
        this.gateway = gateway;
    }

    public CompletableFuture<String> criarPedido(String clienteId, List<String> itens, double valorTotal) {
        String id = UUID.randomUUID().toString();
        return gateway.send(new CriarPedidoCommand(id, clienteId, itens, valorTotal));
    }
}
